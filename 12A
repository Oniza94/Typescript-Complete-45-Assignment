//Assignment 2

//storing a person name in a variable

let personName:string = "Oniza Fazal"

//printing a person name in lowercase

console.log("Lowercase:", personName.toLowerCase());

//printing a personName in uppercase

console.log("Uppercase:", personName.toUpperCase());

//printing a personName with the First Letter Big

console.log(personName.charAt(0).toUpperCase()+personName.slice(0).toLowerCase());